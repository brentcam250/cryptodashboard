<div class = 'card mt-4'>
  <p id="notice"><%= notice %></p>

  <h1>Wallets</h1>

  <table>
    <thead>
      <tr>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @wallets.each do |wallet| %>
        <tr>
          <td><%= wallet.cryptocurrency.symbol %></td>
          <td><%= wallet.address %></td>
          <td><%= link_to 'Show', wallet %></td>
          <td><%= link_to 'Edit', edit_wallet_path(wallet) %></td>
          <td><%= link_to 'Destroy', wallet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <%= form_with(model: @follow, url: follows_path, method: :post) do |f| %>
                  <%= f.hidden_field :follower_id, :value => current_user.id %>
                  <%= f.hidden_field :followable_type, :value => 'Wallet' %> 
                  <%= f.hidden_field :followable_id, :value => wallet.id %>  

                  <%= f.submit 'Follow' %>
              <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Wallet', new_wallet_path %>
</div>