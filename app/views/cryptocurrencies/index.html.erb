<div class = 'column is-centered'>
  <p id="notice"><%= notice %></p>

  <h1>Cryptocurrencies</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class = 'table'>
      <% @cryptocurrencies.each do |cryptocurrency| %>
        <tr>

            <td><%= cryptocurrency.name %></td>
            <td><%= link_to 'Show', cryptocurrency %></td>
            <td><%#= link_to 'Edit', edit_cryptocurrency_path(cryptocurrency) %></td>
            <td><%#= link_to 'Destroy', cryptocurrency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>